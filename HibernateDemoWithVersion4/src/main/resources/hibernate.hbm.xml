<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.akatkar.hb4.ex01.withxml.CustomerInfo" table="custInfo">
    <id column="id" name="id" type="int">
      <generator class="assigned"/>
    </id>
    <property column="custName" name="custName" type="string"/>
    <property column="address" name="address" type="string"/>
    <property column="town" name="town" type="string"/>
    <property column="city" name="city" type="string"/>
    <property column="phone" name="phone" type="string"/>
  </class>
</hibernate-mapping>
